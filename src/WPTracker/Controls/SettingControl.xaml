<UserControl x:Class="WPTracker.Controls.SettingControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="120">
    
    <Grid x:Name="LayoutRoot" Height="Auto" Margin="0 12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="{Binding Title}" Style="{StaticResource PhoneTextLargeStyle}" />
        <TextBlock Grid.Row="1" Text="{Binding Subtitle}" Style="{StaticResource PhoneTextSubtleStyle}" />
    </Grid>
</UserControl>